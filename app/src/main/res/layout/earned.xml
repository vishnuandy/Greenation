<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/bg_grey"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@android:color/white"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="Youh have"
            android:textSize="@dimen/l"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textAlignment="center"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:text="5 Kgs"
            android:textSize="@dimen/xl"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textAlignment="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:text="of tomotoes"
            android:textSize="@dimen/l"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textAlignment="center"
            android:layout_height="wrap_content" />

        </LinearLayout>


        <ImageView
            android:layout_width="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_tomato"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_height="70dp" />
        <EditText
            android:layout_width="wrap_content"
            android:hint="How much would you donate?"
            android:layout_marginLeft="30dp"
            android:background="@color/grey"
            android:textAlignment="center"
            android:textSize="@dimen/s"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:hint="you saved  Rs 3000 and time for donte to needy people"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_above="@+id/donate"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:textAlignment="center"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_marginLeft="50dp"
        android:id="@+id/donate"
        android:layout_marginRight="50dp"
        android:textSize="@dimen/l"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_alignParentBottom="true"
        android:text="Donate"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content" />
            </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>